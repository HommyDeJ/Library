@model IEnumerable<LibraryApp.Models.BookType>

@{
    ViewBag.Title = "Géneros";
}

<h2>Géneros</h2>

<p>
    @Html.ActionLink("Agregar", "Create", new { }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.BookTypeId }, new { @class = "btn btn-warning" })
            @Html.ActionLink("Detalles", "Details", new { id = item.BookTypeId }, new { @class = "btn btn-info" })
            @Html.ActionLink("Eliminar", "Delete", new { id = item.BookTypeId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
